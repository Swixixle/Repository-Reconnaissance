{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eli.local/contracts/eli-output.schema.json",
  "title": "ELI Output (signable artifact) v0.1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "created_at",
    "eli",
    "subject",
    "inputs",
    "decision",
    "evidence",
    "safety"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "0.1"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "eli": {
      "type": "object",
      "additionalProperties": false,
      "required": ["engine", "mode", "policy_hash"],
      "properties": {
        "engine": { "type": "string" },
        "mode": {
          "type": "string",
          "enum": ["advisory", "gatekeeper"]
        },
        "policy_hash": {
          "type": "object",
          "additionalProperties": false,
          "required": ["alg", "value"],
          "properties": {
            "alg": { "type": "string", "const": "sha256" },
            "value": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
          }
        }
      }
    },
    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["type", "content_type", "byte_length"],
      "properties": {
        "type": { "type": "string" },
        "content_type": { "type": "string" },
        "byte_length": { "type": "integer", "minimum": 0 }
      }
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "required": ["sources", "redactions"],
      "properties": {
        "sources": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["kind", "content_hash"],
            "properties": {
              "kind": { "type": "string" },
              "content_hash": {
                "type": "object",
                "additionalProperties": false,
                "required": ["alg", "value"],
                "properties": {
                  "alg": { "type": "string", "const": "sha256" },
                  "value": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
                }
              }
            }
          }
        },
        "redactions": {
          "type": "object",
          "additionalProperties": false,
          "required": ["phi_present", "phi_fields"],
          "properties": {
            "phi_present": { "type": "boolean" },
            "phi_fields": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "decision": {
      "type": "object",
      "additionalProperties": false,
      "required": ["verdict", "confidence", "rationale_codes"],
      "properties": {
        "verdict": {
          "type": "string",
          "enum": ["proceed", "park", "discard", "needs-expert"]
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "rationale_codes": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        }
      }
    },
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "claim", "support", "counter", "notes"],
        "properties": {
          "id": { "type": "string" },
          "claim": { "type": "string" },
          "support": {
            "type": "array",
            "items": { "type": "string" }
          },
          "counter": {
            "type": "array",
            "items": { "type": "string" }
          },
          "notes": { "type": "string" }
        }
      }
    },
    "safety": {
      "type": "object",
      "additionalProperties": false,
      "required": ["high_risk_flag", "blocks", "warnings"],
      "properties": {
        "high_risk_flag": { "type": "boolean" },
        "blocks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "warnings": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
